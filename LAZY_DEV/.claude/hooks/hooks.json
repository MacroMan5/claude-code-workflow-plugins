{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/LAZY_DEV/.claude/hooks/user_prompt_submit.py",
            "description": "Pre-prompt enrichment with context packs, output style selection, and memory auto-detection"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/LAZY_DEV/.claude/hooks/pre_tool_use.py",
            "description": "Safety checks before tool execution (prevent rm -rf, force-push to main, etc.)"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/LAZY_DEV/.claude/hooks/post_tool_use_format.py",
            "description": "Auto-formatting with Black/Ruff after file operations"
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/LAZY_DEV/.claude/hooks/memory_suggestions.py",
            "description": "Suggest memory persistence for durable facts"
          },
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/LAZY_DEV/.claude/hooks/memory_router.py",
            "description": "Route memory persistence to MCP Memory graph"
          },
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/LAZY_DEV/.claude/hooks/log_events.py",
            "description": "Log all tool events for audit trail"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/LAZY_DEV/.claude/hooks/session_start.py",
            "description": "Initialize session context and inject relevant memories"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/LAZY_DEV/.claude/hooks/stop.py",
            "description": "Quality gate logging, TDD enforcement validation, and metrics collection"
          }
        ]
      }
    ]
  }
}
