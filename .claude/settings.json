{
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(uv:*)",
      "Bash(find:*)",
      "Bash(mv:*)",
      "Bash(grep:*)",
      "Bash(npm:*)",
      "Bash(ls:*)",
      "Bash(cp:*)",
      "Bash(rm:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(make:*)",
      "Bash(docker:*)",
      "Bash(python:*)",
      "Bash(node:*)",
      "Write",
      "Edit",
      "Read",
      "Bash(chmod:*)",
      "Bash(touch:*)",
      "Task"
    ],
    "deny": [
      "Bash(chmod:-R:777:*)",
      "Bash(chown:-R:*)",
      "Bash(dd:*)",
      "Bash(docker system prune:*)",
      "Bash(find:/:-delete)",
      "Bash(mkfs:*)",
      "Bash(rm:-rf:$HOME)",
      "Bash(rm:-rf:/)",
      "Bash(rm:-rf:~)",
      "Bash(shred:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash .claude/status_lines/lazy_status.sh",
    "padding": 0
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/session_start.py"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/user_prompt_submit.py"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/pre_prompt_enrichment.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/pre_tool_use.py"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/log_events.py --event PreToolUse"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/post_tool_use_format.py"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/log_events.py --event PostToolUse"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/memory_suggestions.py"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/memory_router.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/stop.py"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/log_events.py --event Stop"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/memory_router.py"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/log_events.py --event SubagentStop"
          }
        ]
      }
    ]
  },
  "commands": [
    {
      "name": "lazy:plan",
      "file": ".claude/commands/plan.md",
      "description": "Create user story and tasks from feature brief"
    },
    {
      "name": "lazy:code",
      "file": ".claude/commands/code.md",
      "description": "Execute task with quality pipeline"
    },
    {
      "name": "lazy:issue-implementation",
      "file": ".claude/commands/code.md",
      "description": "Execute task with quality pipeline (alias for GitHub issues)"
    },
    {
      "name": "lazy:us-development",
      "file": ".claude/commands/code.md",
      "description": "Execute task with quality pipeline (alias for user stories)"
    },
    {
      "name": "lazy:review",
      "file": ".claude/commands/review.md",
      "description": "Review story and create PR with all committed tasks"
    },
    {
      "name": "lazy:fix",
      "file": ".claude/commands/fix.md",
      "description": "Fix issues from story review report"
    },
    {
      "name": "lazy:docs",
      "file": ".claude/commands/docs.md",
      "description": "Generate documentation for codebase, branch, commit, or file"
    },
    {
      "name": "lazy:clean",
      "file": ".claude/commands/clean.md",
      "description": "Remove dead code safely from codebase"
    },
    {
      "name": "lazy:memory-graph",
      "file": ".claude/commands/memory-graph.md",
      "description": "Manage persistent knowledge via MCP Memory Graph"
    },
    {
      "name": "lazy:memory-check",
      "file": ".claude/commands/memory-check.md",
      "description": "Verify Memory MCP connectivity and stats"
    }
  ]
}
